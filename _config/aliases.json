{
	"$schema": "../_schemas/aliases.schema.json",

	"git": {
		"name": "Git.Git",
		"scope": "machine",
		"override": [
			"/VERYSILENT",
			"/SUPPRESSMSGBOXES",
			"/NORESTART",
			"/NOCANCEL",
			"/SP-",
			"/WindowsTerminal",
			"/WindowsTerminalProfile",
			"/DefaultBranchName:main",
			"/Editor:VisualStudioCode"
		],
		"configure": [
			"[IMAGEROOT]/../_scripts/Configure-Git.ps1"
		]
	},

	"vscode": {
		"name": "Microsoft.VisualStudioCode",
		"scope": "machine",
		"override": [ 
			"/VERYSILENT",
			"/NORESTART",
			"/MERGETASKS=desktopicon,addcontextmenufiles,addcontextmenufolders,associatewithfiles,addtopath,!runcode"
		],
		"configure": [
			"[IMAGEROOT]/../_scripts/Configure-VisualStudioCode.ps1"
		]
	},

	"vs2022EntInstallerOnly": {
		"name": "Microsoft.VisualStudio.2022.Enterprise",
		"scope": "machine",
		"override": [
			"--quiet",
			"--norestart",
			"--force",
			"--wait",
			"--nocache",
			"--installerOnly"
		]
	},

	"vs2022EntWithConfig": {
		"name": "Microsoft.VisualStudio.2022.Enterprise",
		"scope": "machine",
		"override": [
			"--quiet",
			"--norestart",
			"--force",
			"--wait",
			"--nocache",
			"--config \"%DEVBOX_HOME%\\Artifacts\\VS2022Ent.vsconfig"
		],
		"configure": [
			"[IMAGEROOT]/../_scripts/Configure-VisualStudio.ps1"			
		]
	},

	"vs2022ProInstallerOnly": {
		"name": "Microsoft.VisualStudio.2022.Professional",
		"scope": "machine",
		"override": [
			"--quiet",
			"--norestart",
			"--force",
			"--wait",
			"--nocache",
			"--installerOnly"
		]
	},

	"vs2022ProWithConfig": {
		"name": "Microsoft.VisualStudio.2022.Professional",
		"scope": "machine",
		"override": [
			"--quiet",
			"--norestart",
			"--force",
			"--wait",
			"--nocache",
			"--config \"%DEVBOX_HOME%\\Artifacts\\VS2022Pro.vsconfig\""
		],
		"configure": [
			"[IMAGEROOT]/../_scripts/Configure-VisualStudio.ps1"			
		]
	},

	"vs2019EntInstallerOnly": {
		"name": "Microsoft.VisualStudio.2019.Enterprise",
		"scope": "machine",
		"override": [
			"--quiet",
			"--norestart",
			"--force",
			"--wait",
			"--nocache",
			"--installerOnly"
		],
		"configure": [
			"[IMAGEROOT]/../_scripts/Configure-VisualStudio.ps1"			
		]
	},

	"vs2019EntWithConfig": {
		"name": "Microsoft.VisualStudio.2019.Enterprise",
		"scope": "machine",
		"override": [
			"--quiet",
			"--norestart",
			"--force",
			"--wait",
			"--nocache",
			"--config \"%DEVBOX_HOME%\\artifacts\\VS2019Ent.vsconfig\""
		],
		"configure": [
			"[IMAGEROOT]/../_scripts/Configure-VisualStudio.ps1"			
		]
	},

	"vs2019ProInstallerOnly": {
		"name": "Microsoft.VisualStudio.2019.Professional",
		"scope": "machine",
		"override": [
			"--quiet",
			"--norestart",
			"--force",
			"--wait",
			"--nocache",
			"--installerOnly"
		]
	},

	"vs2019ProWithConfig": {
		"name": "Microsoft.VisualStudio.2019.Professional",
		"scope": "machine",
		"override": [
			"--quiet",
			"--norestart",
			"--force",
			"--wait",
			"--nocache",
			"--config \"%DEVBOX_HOME%\\artifacts\\VS2019Pro.vsconfig\""
		],
		"configure": [
			"[IMAGEROOT]/../_scripts/Configure-VisualStudio.ps1"			
		]
	},

	"dockerDesktopWSL": {
		"name": "Docker.DockerDesktop",
		"scope": "machine",
		"override": [
			"install",
			"--quiet",
			"--accept-license",
			"--backend=wsl-2",
			"--always-run-service"
		],
		"features": [
			"Microsoft-Windows-Subsystem-Linux",
			"VirtualMachinePlatform",
			"Containers"
		],
		"prepare": [
			"[IMAGEROOT]/../_scripts/Install-WSL2.ps1"
		],
		"configure": [
			"[IMAGEROOT]/../_scripts/Configure-DockerDesktop.ps1"
		]
	},

	"dockerDesktopHyperV": {
		"name": "Docker.DockerDesktop",
		"scope": "machine",
		"override": [
			"install",
			"--quiet",
			"--accept-license",
			"--backend=hyper-v",
			"--always-run-service"
		],
		"features": [
			"Microsoft-Windows-Subsystem-Linux",
			"VirtualMachinePlatform",
			"Containers",
			"Microsoft-Hyper-V-All"
		],
		"prepare": [
			"[IMAGEROOT]/../_scripts/Install-WSL2.ps1"
		],
		"configure": [
			"[IMAGEROOT]/../_scripts/Configure-DockerDesktop.ps1"
		]
	},

	"podman": {
        "name": "RedHat.Podman",
        "scope": "machine",
        "features": [
            "Microsoft-Windows-Subsystem-Linux",
            "VirtualMachinePlatform",
            "Containers"
        ],
        "prepare": [
            "[IMAGEROOT]/../_scripts/Install-WSL2.ps1"
        ],
        "configure": [
            "[IMAGEROOT]/../_scripts/Configure-Podman.ps1"
        ]
    },

	"devHome": [
		{
			"name": "Microsoft.WindowsAppRuntime.1.5",
			"version": "1.5.2",
			"scope": "machine"
		},
		{
			"name": "Microsoft.DevHome",
			"scope": "user",
			"options": [ "--skip-dependencies" ]
		}
	],

	"mattermost": {
		"name": "Mattermost.MattermostDesktop",
		"scope": "machine"
	},

	"podman-desktop": [

		{
			"name": "RedHat.Podman",
			"scope": "machine",
			"features": [
				"Microsoft-Windows-Subsystem-Linux",
				"VirtualMachinePlatform",
				"Containers"
			],
			"prepare": [
				"[IMAGEROOT]/../_scripts/Install-WSL2.ps1"
			],
			"configure": [
				"[IMAGEROOT]/../_scripts/Configure-Podman.ps1"
			]
		},
		{
			"name": "RedHat.Podman-Desktop",
			"scope": "user"
		},
		{
			"name": "Docker.DockerCompose",
			"scope": "user"
		},
		{
			"name": "Kubernetes.kind",
			"scope": "user"
		},
		{
			"name": "Kubernetes.kubectl",
			"scope": "user"
		}
	]
}